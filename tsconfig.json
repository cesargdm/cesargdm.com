{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src",
		"next-env.d.ts",
		"eslint.config.mjs",
		".next/types/**/*.ts",
		"next.config.js"
	],
	"exclude": ["node_modules", ".next", ".vscode"]
}
